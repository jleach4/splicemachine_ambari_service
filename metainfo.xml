<metainfo>
    <schemaVersion>2.0</schemaVersion>
    <services>
        <service>
            <name>SPLICEMACHINE</name>
            <displayName>Splicemachine Instaqll</displayName>
            <comment>A web-based notebook that enables interactive data analytics. It enables you to
                make beautiful data-driven, interactive and collaborative documents with SQL, Scala
                and more. This service is for &lt;b&gt;Demo purposes only&lt;/b&gt; and is &lt;b&gt;not officially supported&lt;/b&gt;
            </comment>
            <version>2.5.0</version>
            <requiredServices>
                <service>SPARK</service>
                <service>YARN</service>
                <service>ZOOKEEPER</service>
                <service>HDFS</service>
                <service>HBASE</service>
            </requiredServices>
            <components>
                <component>
                    <name>SPLICE_MACHINE</name>
                    <displayName>Splice Machine Service</displayName>
                    <category>CLIENT</category>
                    <cardinality>1</cardinality>
                    <commandScript>
                        <script>scripts/master.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>10000</timeout>
                    </commandScript>
                </component>
            </components>

            <restartRequiredAfterChange>true</restartRequiredAfterChange>
            <quickLinksConfigurations>
                <quickLinksConfiguration>
                    <fileName>quicklinks.json</fileName>
                    <default>true</default>
                </quickLinksConfiguration>
            </quickLinksConfigurations>

        </service>
    </services>
</metainfo>